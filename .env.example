# for root docker compose file

# Common (gRPC service URLs)
# Local dev (all services on host): use localhost:PORT
# Docker Compose: use service names so containers can reach each other (or leave unset to use compose defaults)
AUTH_GRPC_URL=auth:49051
FILEMANAGER_GRPC_URL=filemanager:48051
LIFECYCLE_GRPC_URL=lifecycle:50051

# Auth Service
JWT_SECRET=your_strong_secret_here
GITHUB_CLIENT_ID=your_id
GITHUB_CLIENT_SECRET=your_secret
GITHUB_REDIRECT_URI=http://localhost:3000/api/auth/callback/github

# Filemanager Service
BUCKET_TOKEN_SECRET_KEY=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
# Server-side S3 (delete, etc.). Local: http://localhost:4566. Docker: http://host.docker.internal:4566
S3_ENDPOINT=
# Presigned URL host (browser PUT/GET). Usually http://localhost:4566 so the client can reach LocalStack
S3_PRESIGNED_ENDPOINT=
S3_REGION=
S3_BUCKET_NAME=
S3_FORCE_PATH_STYLE=true

# Gateway Service
CORS_ORIGIN=http://localhost:3000

# Client (Next.js; NEXT_PUBLIC_* is exposed to the browser)
NEXT_PUBLIC_API_URL=http://localhost:7777

# Lifecycle Service
# (uses FILEMANAGER_GRPC_URL from Common above)
